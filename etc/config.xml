<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Store/etc/config.xsd">
    <default>
        <system>
            <storeage>
                <type>dropbox</type>
            </storeage>
            <smtp>
                <dropbox_host_temp_folder_path>/var/www/html/var/dropbox</dropbox_host_temp_folder_path>
            </smtp>
        </system>
        <transport>
            <storeages>
                <dropbox>
                    <label>Dropbox</label>
                    <value>dropbox</value>
                    <class>Shockwavedesign\Mail\Dropbox\Model\Storeages\DropboxStoreage</class>
                </dropbox>
            </storeages>
        </transport>
    </default>
</config>
